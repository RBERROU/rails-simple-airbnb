<h1>Available Flats</h1>

<%= link_to "Add New Flat", new_flat_path, class: "btn btn-primary mb-4" %>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to flat.name, flat_path(flat) %>
          </h5>
          <p class="card-text">
            <strong>Address:</strong> <%= flat.address %><br>
            <strong>Description:</strong> <%= flat.description %><br>
            <strong>Price per night:</strong> $<%= flat.price_per_night %><br>
            <strong>Number of guests:</strong> <%= flat.number_of_guests %>
          </p>
          <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
          <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
