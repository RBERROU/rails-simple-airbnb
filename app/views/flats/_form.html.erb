<%= form_with model: @flat, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter flat name" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control", placeholder: "Enter address" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter description" %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_night %>
    <%= form.number_field :price_per_night, class: "form-control", placeholder: "Enter price per night" %>
  </div>

  <div class="form-group">
    <%= form.label :number_of_guests %>
    <%= form.number_field :number_of_guests, class: "form-control", placeholder: "Enter number of guests" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
